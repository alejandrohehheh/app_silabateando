<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFE"
    android:backgroundTint="#A3E3E3"
    tools:context=".seleccionNiveles">

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="461dp"
        android:layout_marginBottom="215dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="264dp"
            android:layout_height="81dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="154dp"
                android:layout_height="56dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="127dp"
                android:layout_height="75dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:foregroundGravity="left"
                app:srcCompat="@drawable/corona" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="154dp"
            android:layout_height="32dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginStart="152dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="149dp"

            android:fontFamily="@font/luckiest_guy"
            android:gravity="top"
            android:text="Niveles"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/ButtonNivel1"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="#6FC7DD"

                android:fontFamily="@font/luckiest_guy"
                android:onClick="anivel1"
                android:text="Nivel 1"
                android:textColor="#1D33F1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/ButtonNivel2"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="#6FC7DD"

                android:fontFamily="@font/luckiest_guy"
                android:text="Nivel 2"
                android:textColor="#1D33F1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/ButtonNivel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="#6FC7DD"

                android:fontFamily="@font/luckiest_guy"
                android:text="Nivel 3"
                android:textColor="#1D33F1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/ButtonNivel4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="#6FC7DD"

                android:fontFamily="@font/luckiest_guy"
                android:text="Nivel 4"
                android:textColor="#1D33F1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/botonInicio"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#6FC7DD"

                android:fontFamily="@font/luckiest_guy"
                android:text="Inicio"
                android:textColor="#1D33F1"
                android:textSize="22sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>