<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#A3E3E3"
    tools:context=".nivel2">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="90"
            android:indeterminate="false"
            android:max="10"
            android:progress="0"
            android:progressTint="#64D612" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckiest_guy"
            android:text="0/10"
            android:textSize="25sp" />

        <Space
            android:layout_width="22dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntuacion:"
            android:visibility="gone"
            tools:visibility="gone" />

    </TableRow>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay1"
        android:layout_width="361dp"
        android:layout_height="560dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="622dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="670dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textCorrecto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/luckiest_guy"
                    android:gravity="center_horizontal"
                    android:text="¡Correcto!"
                    android:textSize="24sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/linearMal1"
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <ImageView
                        android:id="@+id/coronaMal1"
                        android:layout_width="wrap_content"
                        android:layout_height="69dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/corona" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearPerfecto1"
                    android:layout_width="330dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center_horizontal"

                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <ImageView
                        android:id="@+id/coronaPerfect11"
                        android:layout_width="wrap_content"
                        android:layout_height="81dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/corona" />

                    <ImageView
                        android:id="@+id/coronaPerfect12"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/corona" />

                    <ImageView
                        android:id="@+id/coronaPerfect13"
                        android:layout_width="wrap_content"
                        android:layout_height="79dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/corona" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearBien1"
                    android:layout_width="281dp"
                    android:layout_height="77dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <ImageView
                        android:id="@+id/coronaBien11"
                        android:layout_width="wrap_content"
                        android:layout_height="62dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/corona" />

                    <ImageView
                        android:id="@+id/coronaBien12"
                        android:layout_width="wrap_content"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/corona" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imagen_imagen"
                    android:layout_width="215dp"
                    android:layout_height="178dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/foco" />

                <LinearLayout
                    android:id="@+id/linearPalabarCorrecta"
                    android:layout_width="233dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/palabra_correcta"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/luckiest_guy"
                        android:gravity="center_horizontal"
                        android:text="Luz"
                        android:textSize="40sp" />

                    <ImageButton
                        android:id="@+id/sonido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearContenido1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="256dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/palabra_incompleta"
                            android:layout_width="241dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/luckiest_guy"
                            android:gravity="center_horizontal"
                            android:text="L____z"
                            android:textSize="30sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearPregunta1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pregunta1"
                            android:layout_width="245dp"
                            android:layout_height="49dp"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/luckiest_guy"
                            android:text="¿Que silaba falta?"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearBotones"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/boton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />

                        <Button
                            android:id="@+id/boton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />

                        <Button
                            android:id="@+id/boton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearRadioButtons1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="256dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioButton11"
                                style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/luckiest_guy"
                                android:text="a"
                                android:textSize="20sp" />

                            <RadioButton
                                android:id="@+id/radioButton12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/luckiest_guy"
                                android:text="e"
                                android:textSize="20sp" />

                            <RadioButton
                                android:id="@+id/radioButton13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/luckiest_guy"
                                android:text="u"
                                android:textSize="20sp" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/siguiente1"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#6FC7DD"
                    android:fontFamily="@font/luckiest_guy"
                    android:gravity="center_horizontal"
                    android:text="Siguiente"
                    android:textColor="#1D33F1"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/linearVuelveIntentarlo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/textVuelveIntentar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/luckiest_guy"
                        android:gravity="center_horizontal"
                        android:text="¡Vuelve a intentarlo!"
                        android:textSize="18sp"
                        android:visibility="visible" />

                </LinearLayout>

                <Button
                    android:id="@+id/botonAceptar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#6FC7DD"
                    android:fontFamily="@font/luckiest_guy"
                    android:text="Aceptar"
                    android:textColor="#1D33F1"
                    tools:visibility="visible" />

            </LinearLayout>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>